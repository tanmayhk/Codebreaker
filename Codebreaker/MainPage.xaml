<Page
    x:Class="Codebreaker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Codebreaker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="ParentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Red" Click="OnColorClick" Grid.Column ="0" Height="75" Width="75" Background="Red" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="Orange" Click="OnColorClick" Grid.Column ="1" Height="75" Width="75" Background="Orange" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="Gray" Click="OnColorClick" Grid.Column ="2" Height="75" Width="75" Background="Gray" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="Violet" Click="OnColorClick" Grid.Column ="3" Height="75" Width="75" Background="Violet" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="Blue" Click="OnColorClick" Grid.Column ="4" Height="75" Width="75"  Background="Blue" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="Green" Click="OnColorClick" Grid.Column ="5" Height="75" Width="75"  Background="Green" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Header1" Grid.Row="1" Margin="20" VerticalAlignment="Center"/>
            <TextBlock x:Name="Header2" Grid.Row="2" Margin="20" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="MainGrid" Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="4" Grid.Row ="0" Grid.Column="10" Width="5" Grid.RowSpan="4" Background="Black" HorizontalAlignment="Left"/>
            <Border BorderBrush="Gray" BorderThickness="4" Grid.Row ="0" Grid.Column="9" Width="5" Grid.RowSpan="4" Background="Black" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Page>
